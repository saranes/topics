<h1>Meals</h1>

<table cellpadding="0" cellspacing="0">
  <thead>
    <tr>
    
      <th>Title</th>
    
      <th>Tally</th>
      <th>Cast your vote</th>
      <th></th>
    </tr>
</thead>
<tbody>
<% @topics.each do |topic| %>
  <tr>

    <td><%= link_to topic.title, topic %></td>
    
    <td><%= pluralize(topic.votes.length, "vote") %></td>
    <td><%= button_to '+1', votes_path(topic_id: topic.id), method: :post %></td>
    
    <td><%= link_to 'Remove', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>


<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Meal', new_topic_path %>
